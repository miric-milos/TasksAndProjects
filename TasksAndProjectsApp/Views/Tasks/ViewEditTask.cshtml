@model TasksAndProjectsApp.Models.ViewModels.EditTaskViewModel
@{
    ViewData["Title"] = "ViewEditTask";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid my-5">
    <div class="row my-5">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h4 class="text-white my-auto">Edit task details</h4>
                </div>
                <div class="card-body">

                    <form action="/dashboard/tasks/edit" method="post">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })

                        <div class="form-group">
                            <label for="Description">Description</label>
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label for="Name">Deadline</label>
                            @Html.EditorFor(m => m.Deadline, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="form-group">
                            <label for="Status">Status</label>
                            @Html.DropDownListFor(m => m.Status,
                                new SelectList(Enum.GetValues(typeof(TasksAndProjectsApp.Models.Status))),
                                new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label for="Progress">Progress</label>
                            @Html.TextBoxFor(m => m.Progress, new { @class = "form-control", @type = "number" })
                        </div>

                        <button type="submit" class="btn btn-outline-primary">Save changes</button>
                    </form>

                </div>
            </div>
        </div>
        <div class="col-md-7">

        </div>
    </div>

</div>