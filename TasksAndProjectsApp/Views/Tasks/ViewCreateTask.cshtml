@model TasksAndProjectsApp.Models.ViewModels.CreateTaskViewModel
@{
    ViewData["Title"] = "ViewCreateTask";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid my-5">

    <h3>Create a new task</h3>

    <hr />

    <div class="card w-25">
        <div class="card-header">
            <p class="font-weight-bold my-auto">Input task details</p>
        </div>
        <div class="card-body">

            <form action="/dashboard/tasks/create" method="post">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group">
                    <label for="Name">Description</label>
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                </div>


                <div class="form-group">
                    <label for="Name">Deadline</label>
                    <input type="date" value="" name="Deadline" class="form-control" />                    
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
            </form>

        </div>
    </div>

</div>

